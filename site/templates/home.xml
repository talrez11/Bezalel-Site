<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
			<script src="https://maps.googleapis.com/maps/api/js?language=iw"></script>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>
				<div class="article_wrapper">
					<cms:module
						name="articles"
						action="show"
						text_id="header_article"
						template="parts/article.xml"
						/>

						<a
							href="'tel:'.urlencode(Language::getText('number'))"
							cms:eval="href"
							class="phone"
							>
							<cms:text constant="number"/>
						</a>
				</div>

				<div class="form_wrap">
					<cms:module
						name="articles"
						action="show"
						text_id="form_article"
						template="parts/article_no_heading.xml"
						/>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</header>

			<div class="features">
				<cms:module
					name="articles"
					action="show"
					text_id="features_article"
					template="parts/article_features.xml"
					/>
			</div>

			<div class="map">
				<cms:module
					name="articles"
					action="show"
					text_id="map_article"
					template="parts/article.xml"
					/>
				<div id="map_canvas">
					
				</div>	
			</div>

			<footer>
				<span><cms:text constant="copyright"/></span>
			</footer>
		</body>
	</html>
</document>
